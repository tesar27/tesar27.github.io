---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Yerbolat Tazhkeyev">
  <main>
    <div class="hero-text">
      <h1>Jerbolat Taschkejew</h1>
      <p class="subtitle">Software Developer</p>
      <p class="bio">
        React | Flutter | Dart | JavaScript | TypeScript | Python | AWS | SQL |
        NoSQL | RESTful APIs | Git | Agile Methodologies
      </p>
    </div>
  </main>
</Layout>

<style is:global>
  body {
    background: 
      /* Inner 15x15 grid */
      repeating-linear-gradient(
        to right,
        rgba(255, 0, 0, 0.15) 0px,
        rgba(255, 0, 0, 0.15) 1px,
        transparent 1px,
        transparent 15px
      ),
      repeating-linear-gradient(
        to bottom,
        rgba(255, 0, 0, 0.15) 0px,
        rgba(255, 0, 0, 0.15) 1px,
        transparent 1px,
        transparent 15px
      ),
      /* Outer 150x150 grid (Red, visible) */
        repeating-linear-gradient(
          to right,
          rgba(255, 0, 0, 0.5) 0px,
          rgba(255, 0, 0, 0.5) 1px,
          transparent 1px,
          transparent 150px
        ),
      repeating-linear-gradient(
        to bottom,
        rgba(255, 0, 0, 0.5) 0px,
        rgba(255, 0, 0, 0.5) 1px,
        transparent 1px,
        transparent 150px
      ),
      /* Background color */ #000;
    color: white;
    font-family: "Segoe UI", "Roboto", sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    text-align: center;
    padding: 2rem;
  }

  .hero-text {
    max-width: 60ch; /* Limits line length for readability */
  }

  h1 {
    color: white;
    font-size: clamp(3rem, 10vw, 6rem); /* Responsive font size */
    font-weight: 800;
    margin: 0;
    letter-spacing: -0.05em;
  }

  .subtitle {
    color: #ff3333; /* Red */
    font-size: clamp(1.25rem, 4vw, 2rem);
    font-weight: 600;
    margin-top: 0.5rem;
  }

  .bio {
    color: #e0e0e0; /* Off-white */
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    margin-top: 1.5rem;
    line-height: 1.6;
  }
</style>
